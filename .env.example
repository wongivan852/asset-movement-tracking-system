# ========================================
# Django Settings
# ========================================
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ========================================
# Database Configuration
# ========================================
# Leave empty for SQLite (development)
# Set values for PostgreSQL (production)
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# ========================================
# Time Zone
# ========================================
TIME_ZONE=Asia/Hong_Kong

# ========================================
# Site Configuration
# ========================================
SITE_URL=https://your-domain.com

# ========================================
# Email Configuration (Optional)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ========================================
# SSO Configuration - General
# ========================================
SSO_ENABLED=False
SSO_TYPE=SAML
ALLOW_LOCAL_AUTH=True
SSO_UPDATE_USER_DATA=True
SSO_JIT_PROVISIONING=True
SSO_CREATE_UNKNOWN_USER=True

# ========================================
# SSO Configuration - SAML 2.0
# ========================================
# Only required if SSO_TYPE=SAML

# Your Service Provider (SP) Entity ID
SAML_ENTITY_ID=https://your-domain.com/saml/metadata/

# Identity Provider (IdP) Configuration
SAML_IDP_ENTITY_ID=https://idp.yourcompany.com/metadata
SAML_SSO_URL=https://idp.yourcompany.com/sso
SAML_SLO_URL=https://idp.yourcompany.com/slo

# IdP X.509 Certificate (single line, no BEGIN/END markers)
SAML_X509_CERT=

# SAML Attribute Mapping
# Adjust these based on your IdP's attribute names
SAML_ATTRIBUTE_MAPPING_EMAIL=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress
SAML_ATTRIBUTE_MAPPING_USERNAME=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name
SAML_ATTRIBUTE_MAPPING_FIRST_NAME=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/givenname
SAML_ATTRIBUTE_MAPPING_LAST_NAME=http://schemas.xmlsoap.org/ws/2005/05/identity/claims/surname

# ========================================
# SSO Configuration - OAuth/OIDC
# ========================================
# Only required if SSO_TYPE=OAUTH

OAUTH_ENABLED=False
OAUTH_PROVIDER=azure
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_AUTHORIZATION_URL=https://login.microsoftonline.com/common/oauth2/v2.0/authorize
OAUTH_TOKEN_URL=https://login.microsoftonline.com/common/oauth2/v2.0/token
OAUTH_USERINFO_URL=https://graph.microsoft.com/v1.0/me
OAUTH_SCOPE=openid profile email
OAUTH_REDIRECT_URI=https://your-domain.com/accounts/sso/oauth/callback/

# ========================================
# SSO Configuration - LDAP/Active Directory
# ========================================
# Only required if SSO_TYPE=LDAP

LDAP_ENABLED=False
LDAP_SERVER_URI=ldap://your-ad-server.company.com:389
LDAP_BIND_DN=CN=Service Account,OU=Service Accounts,DC=company,DC=com
LDAP_BIND_PASSWORD=
LDAP_USER_SEARCH_BASE=OU=Users,DC=company,DC=com
LDAP_USER_SEARCH_FILTER=(sAMAccountName=%(user)s)
LDAP_GROUP_SEARCH_BASE=OU=Groups,DC=company,DC=com

# LDAP Attribute Mapping
LDAP_ATTR_EMAIL=mail
LDAP_ATTR_FIRST_NAME=givenName
LDAP_ATTR_LAST_NAME=sn
LDAP_ATTR_USERNAME=sAMAccountName
LDAP_ATTR_DEPARTMENT=department
LDAP_ATTR_EMPLOYEE_ID=employeeNumber

# LDAP Security
LDAP_USE_SSL=False
LDAP_USE_TLS=True

# ========================================
# SSO Role Mapping
# ========================================
SSO_ROLE_MAPPING_ENABLED=False
SSO_ADMIN_GROUPS=Asset-Admins,IT-Admins
SSO_MANAGER_GROUPS=Asset-Managers,Location-Managers
SSO_STAFF_GROUPS=Asset-Users,All-Employees
SSO_DEFAULT_ROLE=personnel

# ========================================
# CORS Configuration (for SSO)
# ========================================
CORS_ALLOWED_ORIGINS=https://idp.yourcompany.com,https://login.microsoftonline.com

# ========================================
# Security Settings (Enable for production with HTTPS)
# ========================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
